       <script>


// Capture user click movements
document.addEventListener('dblclick', function(event) {
    if (event.target.tagName === 'LI' && event.target.parentNode.id === 'skill-list') {
        const skill = event.target.getAttribute('data-skill');
        const skillDetail = document.getElementById('skill-detail');
        skillDetail.innerHTML = `
            <h2>${skill}</h2>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed sit amet nulla auctor, vestibulum magna sed, convallis ex.</p>
        `;
        skillDetail.style.display = 'block';
    }
});

// Form submission handler
document.getElementById('contact-form').addEventListener('submit', function(event) {
    event.preventDefault();
    const formData = new FormData(event.target);
    const name = formData.get('name');
    const mobile = formData.get('mobile');
    const email = formData.get('email');
    const organization = formData.get('organization');
    // Send message to server or email
    console.log(`Message from ${name} (${email}) from ${organization}: ${mobile}`);
    // Reset form
    event.target.reset();
});

// Add event listener to each skill list item
const skillListItems = document.querySelectorAll('#skill-list li');
skillListItems.forEach(function(skillListItem) {
    skillListItem.addEventListener('click', function(event) {
        console.log(`Clicked on ${event.target.textContent}`);
    });
});

</script>

